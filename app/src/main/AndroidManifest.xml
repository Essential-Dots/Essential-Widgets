<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE_DATA_SYNC" />
    <uses-permission android:name="android.permission.ACCESS_NOTIFICATION_POLICY"/>
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS"/>
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED"/>
    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.EssentialWidget">
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:theme="@style/Theme.EssentialWidget">
            <!-- android:label="@string/app_name"  commented for redundancy -->

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <!-- Glance Widget Receiver -->
        <receiver
            android:name=".widgets.NdotDigitalWidgetReceiver"
            android:exported="false"
            android:label="Nothing Dot Digital Clock Widget">
            <intent-filter>
                <!-- This is for standard widget updates -->
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />

                <!-- These are good for when the user manually changes time/timezone -->
                <action android:name="android.intent.action.TIME_SET" />
                <action android:name="android.intent.action.TIMEZONE_CHANGED" />
            </intent-filter>
            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/n_dot_digital_widget"/>
        </receiver>

        <service
            android:name=".widgets.ClockUpdateService"
            android:exported="false"
            android:foregroundServiceType="dataSync" />


        <!-- Boot receiver to restart updates after reboot -->
        <receiver
            android:name=".widgets.BootReceiver"
            android:exported="false">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED"/>
            </intent-filter>
        </receiver>


    </application>

</manifest>