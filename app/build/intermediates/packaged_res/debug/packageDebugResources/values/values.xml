<?xml version="1.0" encoding="utf-8"?>
<resources>
    <color name="black">#000000</color>
    <color name="cyan">#3182AA</color>
    <color name="grey">#DFDFDF</color>
    <color name="nothing_blue">#012F6B</color>
    <color name="nothing_green">#13B721</color>
    <color name="nothing_red">#D71921</color>
    <color name="nothing_yellow">#FFC700</color>
    <color name="white">#FFFFFF</color>
    <string name="app_name">EssentialWidget</string>
    <style name="Theme.EssentialWidget" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        
        <item name="colorPrimary">@color/nothing_red</item>
        <item name="colorPrimaryVariant">@color/nothing_yellow</item>
        <item name="colorOnPrimary">@color/white</item>
        
        <item name="colorSecondary">@color/cyan</item>
        <item name="colorSecondaryVariant">@color/nothing_blue</item>
        <item name="colorOnSecondary">@color/white</item>
        
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        
        <item name="android:windowBackground">@color/black</item>
    </style>
</resources>